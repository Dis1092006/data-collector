extends layout

block content
  h1= title
  p This is Sequelize greeting you :)

  h2 Creating a new zone
  form(action="/zones/create", method="post")
    input(type="text", name="name")
    input(type="submit")

  h2 Zones

  ul
  each zone in zones
    li
      = zone.name
      | &nbsp;
      | (
      a(href="/zones/" + zone.id + "/delete") Destroy
      | )
      ul
        li
          | Creating a new node:
          form(action="/zones/" + zone.id + "/nodes/add", method="post", style="display: inline")
            input(type="text", name="title")
            input(type="submit")
        each node in zone.Nodes
          li
            = node.name
            | &nbsp;
            | (
            a(href="/zones/" + zone.id + "/nodes/" + node.id + "/delete") Destroy
            | )